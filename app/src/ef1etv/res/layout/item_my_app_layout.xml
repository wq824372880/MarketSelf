<?xml version="1.0" encoding="utf-8"?>
<com.zeekrlife.market.utils.FocusBorderLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/tv_38"
    android:background="@drawable/selector_focus_border_view"
    android:descendantFocusability="blocksDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/tv_16"
    android:layout_marginVertical="@dimen/tv_6"
    android:paddingHorizontal="@dimen/tv_18"
    android:paddingVertical="@dimen/tv_15"
    app:scaleValue="1.05">

    <include
        android:id="@+id/layout_app_info"
        layout="@layout/item_app_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tv_14"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/tv_65"
            android:layout_weight="2.8">

            <TextView
                android:id="@+id/text_view_app_updates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/tv_44"
                android:alpha=".6"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/theme_main_text_color"
                android:textSize="@dimen/tv_22"
                tools:text="对性能进行了优化，体验更加流畅,对性能进行了优化，体验更加流畅对性能进行了优化，体验更加流畅对性能进行了优化，体验更加流畅" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_app_update_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/tv_17"
                android:alpha=".6"
                android:gravity="end"
                android:text="@string/item_app_update_time"
                android:textAppearance="?attr/textAppearanceLabelSmall"
                android:textColor="@color/theme_main_text_color"
                android:textSize="@dimen/tv_22" />

            <TextView
                android:id="@+id/text_view_app_update_time_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tv_1"
                android:layout_marginEnd="@dimen/tv_10"
                android:gravity="end"
                android:textColor="@color/theme_main_text_color"
                android:textSize="@dimen/tv_24"
                tools:text="2022-05-09" />
        </LinearLayout>
    </LinearLayout>
</com.zeekrlife.market.utils.FocusBorderLinearLayout>
