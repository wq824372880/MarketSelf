<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--banner-->
        <TextView
            android:id="@+id/banner_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp.200"
            android:layout_marginTop="@dimen/dp.16"
            app:bvp_indicator_slide_mode="worm"
            android:background="@color/color_848484" />

        <!--推荐位-->
        <TextView
            android:background="@color/color_848484"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp.50"
            android:layout_marginTop="@dimen/dp.30">

        </TextView>
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_848484"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TextView>

    </LinearLayout>
</LinearLayout>