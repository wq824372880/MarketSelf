<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.hjq.shape.view.ShapeImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/iv_banner_img"
        app:shape_radius="@dimen/recommend_banner_imageview_round"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/img_bg_default_large_app_banner_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recommend_banner_imageview_height"
        />
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/mask_view"
        android:background="@color/black_40"
        app:round="@dimen/dp.16"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recommend_banner_imageview_height"
        />



</com.hjq.shape.layout.ShapeConstraintLayout>
